<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp">

    <LinearLayout
        android:id="@+id/holding" 
        android:orientation="vertical" 
        android:layout_width="300dp" 
        android:layout_height="300dp">
        
        <LinearLayout
            android:id="@+id/confirmationToast" 
            android:orientation="horizontal" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">

            <TextView android:id="@+id/confirmationToastText" 
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent" 
	            android:text="Choose month to check budget"
	            android:textColor="#AE0000"
	            android:gravity="center_vertical"/>
            
            <TextView android:id="@+id/confirmationToastText2" 
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent" 
	            android:text="Choose year to check budget"
	            android:textColor="#AE0000"
	            android:gravity="center_vertical"/>

        </LinearLayout>
		<LinearLayout
            android:id="@+id/confirmationToastSpinner" 
            android:orientation="horizontal" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">   
            
            <Spinner
		        android:id="@+id/budgetPeriodMonthSpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        />
		            
            <Spinner
		        android:id="@+id/budgetPeriodYearSpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        />
		            
           
        </LinearLayout>
        <LinearLayout
            android:id="@+id/confirmationButton" 
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"   >    
        
        
        <Button android:id="@+id/confirmationDialogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="60dp"
                android:text="ok">
            </Button>
            
        
        <Button android:id="@+id/cancelDialogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="60dp"
                android:text="cancel">
            </Button>
        
        
        </LinearLayout>
        
        
        
        
        
        
    </LinearLayout>
</ScrollView>