<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    
     
    
    <EditText
        android:id="@+id/showCategory"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:hint="ide az ujat ird"
        android:background="@android:color/transparent" 
        android:textSize="30px" />

    <CheckBox
        android:id="@+id/showIncomeCat"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        />


    <CheckBox
        android:id="@+id/showExpenseCat"
        android:layout_width="68dp"
        android:layout_height="47dp"
         />
       

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"  >

<Button
    android:id="@+id/addNewCategoryOKBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:onClick="addNewCategoryOKBtn"
    android:text="@string/ok_button" />

<Button
    android:id="@+id/addNewCategoryCancelBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:onClick="addNewCategoryCancelBtn"
    android:text="@string/cancel_button" />


</LinearLayout>
    
</LinearLayout>